{
  "name": "universalis-mcp-server",
  "version": "0.2.1",
  "description": "MCP server for Universalis, Saddlebag Exchange, and XIVAPI",
  "author": "Jakub Mucha <jakub.mucha@icloud.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/drptbl/universalis-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/drptbl/universalis-mcp-server/issues"
  },
  "homepage": "https://github.com/drptbl/universalis-mcp-server#readme",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "universalis-mcp-server": "./dist/index.js"
  },
  "files": [
    "dist",
    "data",
    "docs/wiki"
  ],
  "scripts": {
    "build": "tsc && chmod 755 ./dist/index.js",
    "prepublishOnly": "pnpm update-materia && pnpm update-wiki-docs && pnpm build",
    "update-materia": "node scripts/update-materia-data.js",
    "update-wiki-docs": "node scripts/update-wiki-docs.mjs",
    "lint": "biome check .",
    "format": "biome format --write ."
  },
  "keywords": [
    "mcp",
    "universalis",
    "ffxiv"
  ],
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.25.2",
    "bottleneck": "2.19.5",
    "lru-cache": "11.2.4",
    "zod": "4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/node": "25.0.6",
    "typescript": "5.9.3"
  },
  "packageManager": "pnpm@10.28.0"
}
